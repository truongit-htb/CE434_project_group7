echo "  Test name = $TESTNAME"
#echo "  Test seed = $SEED"
echo "Start Simulation"

mkdir -p ./results/log/

vsim -c  -voptargs=+acc work.$TESTNAME \
-l ./results/log/$TESTNAME.log \
-wlf ./results/$TESTNAME.wlf \
-do "log -r /*; run -all "

echo "Done Simulation"

