TESTNAME=tb_conv2d_1kernel_1channel
#TESTNAME=tb_conv3d_1kernel_1channel
#TESTNAME=tb_fc

SEED=$TESTNAME+$(cat /dev/urandom | tr -dc 'a-zA-Z0-9' | fold -w 8 | head -n 1)
echo "  Test seed = $SEED"


echo "  Test name = $TESTNAME"
echo "Start Simulation"


mkdir -p ./results/log/


## SIMULATE WITH WAVEFORM
vsim  -c -voptargs=+acc work.$TESTNAME \
-l ./results/log/$SEED.log \
-wlf ./results/$TESTNAME.wlf \
-do "log -r /*; run -all "  



## WITHOUT WAVEFORM
#vsim  -c -voptargs=+acc work.$TESTNAME \
#-l ./results/log/$SEED.log \
#-do "nolog -r /*; run -all"


echo "Done Simulation"



